{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ResourceGroupNameIndividual": {
      "type": "string"
    },
    "SubscriptionName": {
      "type": "string"
    },
    "Region": {
      "type": "string",
      "allowedValues": [
        "westeurope",
        "northeurope"
      ]
    },
    "ApplicationId": {
      "type": "string"
    },
    "CostCenter": {
      "type": "string"
    },
    "Budget": {
      "type": "string"
    },
    "Contact": {
      "type": "string"
    }
  },

  "variables": {
    "IamReaderGroupName": "AzureReader-Reader",
    "SubscriptionCode": "[split(parameters('SubscriptionName'),'-')]",
    "RegionCodes": {
      "westeurope": {
        "type": "string",
        "RegionCode": "weu"
      },
      "northeurope": {
        "type": "string",
        "RegionCode": "neu"
      }
    },
    "ResourceGroupName": "[concat(variables('RegionCodes')[parameters('Region')].RegionCode, '-', last(variables('SubscriptionCode')), '-rsg-', parameters('ResourceGroupNameIndividual'), '-99')]",
    "Contributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"
  },

  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('Region')]",
      "name": "[variables('ResourceGroupName')]",
      "properties": {},
      "tags": {
        "ApplicationId": "ApplicationId",
        "CostCenter": "CostCenter",
        "Budget": "Budget",
        "Contact": "Contact",
        "Automation": "ontentVersion"
      }
    },
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2017-05-01",
      "location": "West Europe", //"[parameters('location')]",
      "name": "11111111-1111-1111-1111-111111111111", //"[parameters('roleNameGuid')]",
      "properties": {
        "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]", //"[variables(parameters('builtInRoleType'))]",
        "principalId": "ffea2e1f-0679-454f-8820-65a0186028b8", //"[parameters('principalId')]",
        "scope": "[resourceGroup().id]" //"[variables('scope')]"
      }
    }
  ],

  "outputs": {
    "SubscriptionCode": {
      "type": "array",
      "value": "[variables('SubscriptionCode')]"
    },
    "ResourceGroupName": {
      "type": "string",
      "value": "[variables('ResourceGroupName')]"
    }
  }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ResourceGroupNameIndividual": {
      "type": "string"
    },
    "SubscriptionName": {
      "type": "string"
    },
    "Regions": {
      "type": "string",
      "allowedValues": [
        "westeurope",
        "northeurope"
      ]
    },
    "ApplicationId": {
      "type": "string"
    },
    "CostCenter": {
      "type": "string"
    },
    "Budget": {
      "type": "string"
    },
    "Contact": {
      "type": "string"
    }
  },

  "variables": {
    "IamReaderGroupName": "AzureReader-Reader",
    "SubscriptionCode": "[split(parameters('SubscriptionName'),'-')]",
    "RegionCode": {
      "weu": {
        "Region": "westeurope"
      },
      "neu": {
        "Region": "northeurope"
      }
    },
    "ResourceGroupName": "[variables('RegionCode')[parameters('Regions')].Region]"
  },

  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('Regions')]",
      "name": "[variables('ResourceGroupName')]",
      "properties": {},
      "tags": {
        "ApplicationId": "ApplicationId",
        "CostCenter": "CostCenter",
        "Budget": "Budget",
        "Contact": "Contact",
        "Automation": "ontentVersion"
      }
    }
  ],
  "outputs": {}
}





